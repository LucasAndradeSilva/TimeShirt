<!doctype html>
<html lang="en">
<head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
        body {
            margin-right: 0px;
            margin-top: 0px;
            background: linear-gradient(200deg, #0094ff, #0094ff 59%, #ffffff 60%, #ffffff);
            background-repeat: no-repeat;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-transparent font-weight-bold">
        <div class="logo">
            <a href="javascript:;" class="simple-text">
                <img src="~/Images/Login/aprot.png" class="rounded mx-auto d-block"width="90" height="100" id="imgLogo" />
            </a>
        </div>
        <div class="collapse navbar-collapse" id="collapsibleNavId">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item active">
                    <a class="nav-link" asp-action="Home" asp-controller="Funcionario">Home<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-action="Servicos" asp-controller="Funcionario">Serviços</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-action="Registro_de_Horas" asp-controller="Funcionario">Registro de Horas</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="#">Relatório</a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
                <a class="btn text-white my-2 my-sm-0" href="#">@Context.Session.GetUsuario().logadoFuncionario.NomeFunc1</a>
                <a class="btn btn-dark text-white my-2 my-sm-0" href="/">Sair</a>
            </form>
        </div>
    </nav>

    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center bg-white">
        <div class="container">
            <br />
            &copy; @DateTime.Now.Year - TS_2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            <br /><br />
        </div>
    </footer>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>
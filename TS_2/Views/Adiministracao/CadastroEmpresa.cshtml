@model TS_2.Models.Join.mdJoinCadEmpresa

@{
    ViewData["Title"] = "Cadastro Empresa";
    Layout = "~/Views/Shared/_LayoutAdministracao.cshtml";
}

<h1>Cadastro Empresa</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CadastroEmpresa">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeEmpresa1" class="control-label"></label>
                <input asp-for="NomeEmpresa1" class="form-control" value="Cleber Transportes LTDA" />
                <span asp-validation-for="NomeEmpresa1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CNPJ1" class="control-label"></label>
                <input asp-for="CNPJ1" class="form-control" data-mask="00.000.000/0000-00" value="13.481.904/0001-28" />
                <span asp-validation-for="CNPJ1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cep1" class="control-label"></label>
                <input asp-for="Cep1" class="form-control" data-mask="00.000-000" value="06137379" />
                <span asp-validation-for="Cep1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rua1" class="control-label"></label>
                <input asp-for="Rua1" class="form-control" value="São Caitano" />
                <span asp-validation-for="Rua1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Numero1" class="control-label"></label>
                <input asp-for="Numero1" class="form-control" value="534" />
                <span asp-validation-for="Numero1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bairro1" class="control-label"></label>
                <input asp-for="Bairro1" class="form-control" value="Jardim Das Rosas" />
                <span asp-validation-for="Bairro1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Logradouro1" class="control-label"></label>
                <input asp-for="Logradouro1" class="form-control" value="Rua" />
                <span asp-validation-for="Logradouro1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado1" class="control-label"></label>
                <select asp-for="Estado1">
                    <option value="SP" selected>SP</option>
                </select>
                <span asp-validation-for="Estado1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pais1" class="control-label"></label>
                <input asp-for="Pais1" class="form-control" value="Brasil" />
                <span asp-validation-for="Pais1" class="text-danger"></span>
            </div>
            <input type="button" id="btnAddServico" value="ADICIONAR SERVIÇO"/>
            @*Mecher aqui*@
            <div class="form-group">
                <label class="control-label">FUNCIONARIO QUE IRÁ PARTICIPAR DO SERVIÇO</label>
                <input asp-for="EmailFunc1" class="form-control" value="Lucas@gmail.com" />
            </div>
            <div class="form-group">
                <label asp-for="NumeroContrato1" class="control-label"></label>
                <input asp-for="NumeroContrato1" class="form-control" value="3900" />
                <span asp-validation-for="NumeroContrato1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao1" class="control-label"></label>
                <textarea asp-for="Descricao1" class="form-control">Criar uma rede de conecxão entre São Paulo e Nova Yourk</textarea>
                <span asp-validation-for="Descricao1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataContrato1" class="control-label"></label>
                <input asp-for="DataContrato1" class="form-control"/>
                <span asp-validation-for="DataContrato1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" id="btnCad" class="btn btn-success form-control" asp-action="CadastroEmpresa" asp-controller="Adiministracao"><i class="fa fa-spinner fa-spin" id="Loading"></i><a id="txtButton"></a></button>
            </div>
        </form>
    </div>
</div>


<!-- =================== -->
<!-- === JAVA SCRIPT === -->
<!-- =================== -->
<script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#Loading').css('display', 'none');
        $('#txtButton').text(' Cadastro');

        $('#btnCad').on('click', function () {
            $('#Loading').css('display', 'inline-block');
            $('#txtButton').text(' Loading');
        });
    });
</script>



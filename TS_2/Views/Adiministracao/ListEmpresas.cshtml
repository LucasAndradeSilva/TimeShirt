@model IEnumerable<TS_2.Models.mdEmpresa>

@{
    ViewData["Title"] = "ListEmpresas";
    Layout = "~/Views/Shared/_LayoutAdministracao.cshtml";
}

<link href="~/css/ViewAdm/StylelListEmpresa.css" rel="stylesheet" />

@if (!string.IsNullOrEmpty(ViewBag.Erro))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert" id="alerta">
        <strong class="text-center">@ViewBag.Erro</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

}
<div class="jumbotron" style="box-shadow: 0px 0px 10px 0px #000000; background-color: white;">
    <h1 class="text-center text-uppercase">Empresas cadastradas</h1>
    <br />
    <form class="form-inline my-2 my-lg-0 justify-content-center" asp-action="ListEmpresas" method="post">
        <input class="form-control mr-lg-2 w-25 col-md-10" type="search" name="txtFind" placeholder="Ex. Cleber Importações" aria-label="Buscar">
        <button class="btn btn-success my-2 my-sm-0" type="submit">Buscar</button>
    </form>
    <br />

    <table class="table table-bordered">
        <thead>
            <tr class="jumbotron">
                <th>
                    EMPRESA
                </th>
                <th>
                    CNPJ
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeEmpresa1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CNPJ1)
                    </td>
                    <td>
                        @Html.ActionLink("DETALHES", "DetalhesEmpresa", new { idEmp = item.IdEmpresa1 }, new { @class = "text-white btn btn-primary" })
                        @Html.ActionLink("DELETAR", "DeletarEmpresa", new { IdEmp = item.IdEmpresa1 }, new { @class = "text-white btn btn-danger", @onclick = "return confirm('Deseja realmente excluir está Empresa?');" })
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>





